<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    tools:context=".statisticsactivity">

    <Button
        android:id="@+id/btnView"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#F8FBFB"
        android:fontFamily="monospace"
        android:text="_View 15 Recent Entries"
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/contentMain"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:text="> Click here to set a date and time for the lower bound"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502" />

    <Button
        android:id="@+id/statbuttongen"
        android:layout_width="166dp"
        android:layout_height="57dp"
        android:layout_below="@+id/contentMain"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="110dp"
        android:backgroundTint="#00B8D4"
        android:text="Generate Statistics"
        android:textColor="#FFEFEF"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/contentMain2"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statbuttongen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="100dp"
        android:text="> Click here to set a date and time for the upper bound"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/logoonly" />

    <TextView
        android:id="@+id/statview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentMain2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="monospace"
        android:text="Statistics:\n > Average connectivity time per operator\n > Average connectivity time per network type\n > Average signal power per network type \n > Average SNR per network type"
        android:textColor="#ABF4FF"
        android:textSize="14sp"
        android:typeface="normal" />

</RelativeLayout>